{% set imageProperties = {
  image: hero.imageDesktop[0]|default(),
  sizes: '(max-width: 1280px) 100vw, 1280px',
  height: 412,
  width: 632,
  srcset: ['1280w', '1500w', '1920w', '2400w'],
  loading: "eager",
  class: "c-hero__image",
} %}

{% set imagePropertiesMobile = {
  image: hero.imageMobile[0]|default(),
  sizes: '100vw',
  height: 508, 
  width: 376,
  srcset: ['375w', '750w'],
} %}


{% set attributesHero = {
    class: [
        'c-hero',
        'c-hero--has-no-spacing',
        'c-hero--' ~ type|default('detail'),
        hero.imageDesktop[0]|default(false)  ? 'c-hero--missing-background'
    ]
} %}

<div {{ attr(attributesHero) }}>
    <div class="c-hero__container">
        <div class="c-hero__content"> {% block content %}{% endblock %}</div>
    </div>

    <div class="c-hero__image-container">
        {% include '_partials/image.twig' with { 
            properties: imageProperties,
            propertiesMobile: imagePropertiesMobile
        } %}
    </div>
</div>
